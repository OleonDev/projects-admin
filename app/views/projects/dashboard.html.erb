<div class="text-center">
    <div class="row p-5">
        <div class="col">
            <h3>Services</h3>
            <h1><%= @services.size %></h1>
            <h1><%= number_to_currency ProjectsHelper.servicesTotal %></h1>
        </div>
        <div class="col">
            <h3>Projects</h3>
            <h1><%= ProjectsHelper.count %></h1>
        </div>
        <div class="col">
            <h3>Contacts</h3>
            <h1><%= ContactsHelper.count %></h1>
        </div>
        <div class="col">
            <h3>Payments</h3>
            <h1><%= ProjectsHelper.paymentsCount %></h1>
            <h1><%= number_to_currency ProjectsHelper.paymentsTotal %></h1>
        </div>
    </div>
    <div class="row p-3">
        <div class="col">
            <h2>Active Services </h2>
            <%= render 'projects/services', services: @services %>
        </div>
    </div>
    <h3> theBest </h3>
</div>